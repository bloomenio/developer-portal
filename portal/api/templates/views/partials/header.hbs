<style>
  #view-source {
    position: fixed;
    display: block;
    right: 0;
    bottom: 0;
    margin-right: 40px;
    margin-bottom: 40px;
    z-index: 900;
  }
  body::before {
    background-size: cover;
    background-attachment: fixed;
    content: '';
    will-change: transform;
    z-index: -1;
    left: 0;
    right: 0;
    bottom: 0;
    top: 0;
    position: fixed;
  }

  body::before {
      background-image: url('{{{staticUrlPrefix}}}/images/bg.png');
  }

  .dialog-card-square.mdl-card {
    height: 479px;
    width: 395px;
    padding: 32px 16px 0px 16px;
    
  }
  .dialog-card-square > .mdl-card__title {
    color: black;
    background-color: #fff;
    background-image: url('{{{staticUrlPrefix}}}/images/logo_bloomen.png');
    background-size: 226px;
    background-repeat: no-repeat;
    background-position: top;
    height: 200px;

  }

  .center-card {
      position: absolute;
      left: 50%;
      top: 50%;
      -webkit-transform: translate(-50%, -50%);
      transform: translate(-50%, -50%);
  }

  .mdl-card__supporting-text {
    height: 100%;  
  }

  .reset-form  {
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: center;
  }

  .dialog-button {      
      height: 38px;
      background-color: #fff;
      padding: 0 16px;
      border: 2px solid #0066A1;
      border-radius: 5px;
      color: #0066A1;
      box-shadow: none;
      margin-bottom: 24px;
  }

  .wl-logo {
    position: absolute;
    color: white;
    bottom: 20px;
    height: 24px;
    width: 100%;
    background-image: url('{{{staticUrlPrefix}}}/images/img_logo_worldline_white.png');
    background-repeat: no-repeat;
    background-position: center;
    background-size: contain;
  }

  .new_password {
    margin-top: 10px;
    padding-bottom: 0px;
    background-color: #E9F4FA;
  }

  #new_password {
    border-bottom-width: 1px;
    border-color: #0066A1; 
    padding-left: 5px;
  }

  .mdl-textfield__label {
    color: rgba(0, 0, 0, 0.75);
    padding-left: 5px;
  }
  .mdl-textfield__label:after  {
    background-color: transparent;
  }
  .mdl-textfield.is-invalid .mdl-textfield__label:after {
    background-color: transparent;
  }
  .mdl-textfield--floating-label.is-dirty .mdl-textfield__label {
    color: #0066A1;
    padding-left: 5px;
  }
  .mdl-textfield--floating-label.is-focused .mdl-textfield__label{
    color: #0066A1;
    padding-left: 5px;
  }

  .token-warn-panel{
    display: flex;
    flex-direction: column;
    justify-content: space-evenly;
    align-items: center;
  }
  .token-error-message {
      color: #D50000;
      font-size: 24px;
      text-align: center;
      -webkit-text-align: center;
  }

    .token-confirmation-message {
      color: black;
      font-size: 24px;
      text-align: center;
      -webkit-text-align: center;
  }

  .token-error-image {
      width: 80px;
      height: 80px;
      background-color: #D50000;
      -webkit-mask-image: url('{{{staticUrlPrefix}}}/images/ic_alert.svg');
      -webkit-mask-size: cover;
      mask-image: url('{{{staticUrlPrefix}}}/images/ic_alert.svg');
      mask-size: cover;
      margin-top: 40px;
  }

  .token-confirmation-image {
      width: 80px;
      height: 80px;
      background-color: black;
      -webkit-mask-image: url('{{{staticUrlPrefix}}}/images/ic_thumb_up.svg');
      -webkit-mask-size: cover;
      mask-image: url('{{{staticUrlPrefix}}}/images/ic_thumb_up.svg');
      mask-size: cover;
      margin-top: 40px;
    }

  .hello-text {
    font-size: 24px;
  }

  
</style>

