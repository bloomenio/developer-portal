
{{>header}}
    <div class="dialog-card-square mdl-card mdl-shadow--16dp">
      <div class="mdl-card__title "></div>
      <div class="mdl-card__supporting-text">
        {{#if status}}
          <form action="update" class="reset-form" enctype="application/x-www-form-urlencoded" method="POST">
            <span class="hello-text" >{{{__ "view_reset_hello" firstName }}}</span>
            <input type="hidden" name="otk" value="{{otk}}">
            <div class=" new_password mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
              <input class="mdl-textfield__input" type="password" name="password" minlength="5" id="new_password" required >
              <label class="mdl-textfield__label" for="new_password">{{{__ "view_common_password"}}}</label>
              <span class="mdl-textfield__error">{{{__ "view_common_length"}}}</span>
            </div>

            <script>
              var input = window.document.getElementById('new_password')
              input.focus();
              input.parentNode.classList.add('is-focused');
            </script>
          
            <button type="submit"  class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect dialog-button">
              {{{__ "view_common_change"}}}
            </button>
          </form>
        {{else}}
          <div class="token-warn-panel">
            <span class="token-error-message">{{{__ "view_reset_token_expired"}}}</span>
            <div class="token-error-image"></div> 
          </div>
        {{/if}}
      </div>
    </div>
{{>footer}}

 

